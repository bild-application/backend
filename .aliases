# To use aliases, read the file aliases.md

# SYMFONY ALIASES
alias pc='de php bin/console'
alias stan='de vendor/bin/phpstan analyse --level=6 --memory-limit=-1 src'
alias ecs='de vendor/bin/ecs --fix'

## TEST ALIASES
alias pu='de php bin/phpunit --testdox'
alias puf='de php bin/phpunit --testdox --filter'
alias puc-text='de php bin/phpunit --testdox --coverage-text'
alias puc-html='de php bin/phpunit --testdox --coverage-html .phpunit-result'

# DOCKER ALIASES
alias dc='docker compose'
alias de='docker compose exec php'
alias du='docker compose up -d --wait'
alias db='docker compose up -d --build'
alias dbc='docker compose build --no-cache'

# OTHER ALIASES
alias c=clear
